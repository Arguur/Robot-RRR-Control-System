{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Compilar y ejecutar Cliente",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/client/client.exe",
            "args": ["127.0.0.1", "8080"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/client",
            "environment": [],
            "externalConsole": true, // Ejecutar en una consola externa
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build client",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "logging": {
                "engineLogging": true
            }
        },
        {
            "name": "(gdb) Ejecutar Cliente",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/client/client.exe",
            "args": ["127.0.0.1", "8080"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/client",
            "environment": [],
            "externalConsole": true, // Ejecutar en una consola externa
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "logging": {
                "engineLogging": true
            }
        },
        {
            "name": "Debug server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server/main.py",
            "console": "integratedTerminal"
        }
    ]
}